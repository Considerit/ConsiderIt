%script{ :type => "text/template", :id => "tpl_point_view"}
  %span.m-point-header-region
  .m-point-wrap{ :'data-target' => "m-point-details", :'data-id' => "{{id}}" }
  .m-point-expansion-region

%script{ :type => "text/template", :id => "tpl_point_view_header"}
  (( if (hide_name || user.name == 'Anonymous' ) { ))
  %span.avatar.m-point-author-avatar.m-avatar-anonymous{:style => "background-image: url(/system/default_avatar/small_default-profile-pic.png)", :title => "This user has requested to remain anonymous"}
  (( } else if (user) { ))

  %a.avatar.m-point-author-avatar{ :id => "avatar-{{user.id}}", :alt => "{{user.name}}'s profile", :'data-id' => "{{user.id}}", :'data-target' => "user_profile_page" }
  (( } ))


%script{ :type => "text/template", :id => "tpl_point_view_body"}
  .m-point-nutshell-wrap
    .m-point-nutshell
      {{ adjusted_nutshell }}

  .m-point-details-description 
    {{ text }}

  .m-point-operations

    %a.m-point-read-more 

    (( if( _.contains(actions, 'remove') ){ ))
    %button.m-point-remove{ :'data-target' => 'point-remove', :'data-id' => "{{id}}"}
      Remove
    (( } ))

  (( if( _.contains(actions, 'include') ){ ))
  .m-point-include-wrap
    %button.m-point-include{ :'data-target' => 'point-include', :'data-id' => "{{id}}"}
      Add to your list
      %span.list_connector
  (( } ))

%script{ :type => "text/template", :id => "tpl_point_expanded"}
  .m-point-follow-region
  .m-point-assessment
  .m-point-discussion

%script{ :type => "text/template", :id => "tpl_point_follow"}
  (( if(already_follows){ ))
  %button.m-point-follow
    Unfollow this point
  (( } else{ ))
  %button.m-point-follow{ :title => 'Get notifications when the point is updated or someone comments on it. You can easily unsubscribe later.'}
    Follow this point
  (( } ))
