#intro
  .table_container
 
    %table
      %tr
        = render :partial => "home/person_tapestry", :locals => {:vertical => false, :count => 17}
    %table
      %tr
        /
          %td.graphic
            = image_tag "placeholder-index.png", :alt => "Crowd of excited people, presumably enchanted by the Living Voters Guide"
        = render :partial => "home/person_tapestry", :locals => {:vertical => true, :count => 5}
        
        %td
          #description

            .header
              .follow
                - if APP_CONFIG['socmedia']['facebook']['include_follow']
                  %span.facebook
                    %a.fb_page{ :href => "#{APP_CONFIG['socmedia']['facebook']['facebook_page']}", :target => "_blank", :title => "Find us on Facebook" }
                      = image_tag "facebook_button.png", :alt => "Facebook logo"
                - if APP_CONFIG['socmedia']['twitter']['include_follow']
                  %span.twitter
                    %a.twitter_page{ :href => "#{APP_CONFIG['socmedia']['twitter']['twitter_page']}", :target => "_blank", :title => "Follow us on Twitter" }
                      = image_tag "Twitter_button.png", :alt => "Twitter logo"        
              .subheader
                %a.home_initiative_link{ :href => "/initiatives" }
                  %h2 
                    = APP_CONFIG['home']['call']
                    .extra
                      = APP_CONFIG['home']['subcall']
                  
                  - APP_CONFIG['home']['values'].each do |value|
                    .text
                      %span.italic
                        = value['lead'] 
                      = value['follow'] 


        = render :partial => "home/person_tapestry", :locals => {:vertical => true, :count => 5}
    %table
      %tr
        = render :partial => "home/person_tapestry", :locals => {:vertical => false, :count => 17}


  
#initiative.guide   
  .get_started
    Get started by clicking on a #{APP_CONFIG['decisions']['name']['short']} below! 

  .initiatives
    #initiatives{ :name => "initiatives" }              
      %ul.initiative_list
        - get_initiatives.each do |option|
          = render :partial => "options/block/small", :locals => { :option => option, :show_full_text => false }
    .clear