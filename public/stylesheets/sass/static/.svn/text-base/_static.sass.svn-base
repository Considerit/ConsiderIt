
#static
  > *
    padding-left: 20px
  
  &.aboutus
    h3
      margin-bottom: 5px
      line-height: 26px  
  
    td
      vertical-align: top
      &.desc
        width: 50%
        padding-right: 50px
        font-size: 16px
        line-height: 17px
          
      &.list
        width: 50%
        
        > ul
          @include nude-list
          > li
            padding-bottom: 5px
          ul.people
            @include nude-list
  &.tos
    ul
      padding-left: 50px
    h3
      padding-top: 15px
      
  &.rules
    font-size: 16px
    line-height: 20px
    
    > p
      max-width: 650px
      font-size: 18px
      line-height: 20px
    ul
      margin-right: 12px
      
      li
        padding: 15px
        height: 350px
        width: 28%
        float: left
        
        @include nude-list
        background-color: #ccc
        border: 3px solid gray
        &.middle
          margin: 0 10px
          
        strong
          display: block
          padding-bottom: 10px
          font-size: 18px