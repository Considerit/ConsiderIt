

- theme = Themes::ThemeDirectrep.find_by_account_id(current_tenant.id)
- rep_user = theme.user

- prompt ||= @proposal.name ? @proposal.name : 'Help consider this, please.'

.dr_proposal

  - if @can_update || @can_delete
    = render :partial => 'proposals/admin_actions'

  .rep
    .img
      = image_tag current_theme_image_path("#{theme.rep_name.gsub(' ', '_').downcase}.jpg")

    .author
      = rep_user.name

  .about.bubble.rep_statement.left
    %h3
      - if @can_update
        - @proposal.name = prompt
        = render :partial => 'proposals/admin_make_editable', :locals => { :field => :name}

      - else
        = prompt

    .full_text
      - if @can_update
        = render :partial => 'proposals/admin_make_editable', :locals => { :field => :description}
      - else
        = simple_format(auto_link(@proposal.description.html_safe, :all, :target => "_blank"))
  

  .clear
