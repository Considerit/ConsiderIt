.link_list

  %h3.label
    More resources

  .body

    - links = [{:anchor=>'League of Women Voters of Gr. Seattle',:link=>'http://sites.google.com/site/wavoter/ballot', :title=>'Voters Guide by the League of Women Voters'},  {:anchor=>'Progressive Voters Guide', :link=>'http://waballotguide.com/', :title=>'Voters Guide by Fuse'}, {:anchor=>'Washington Policy Center', :link=>'http://www.washingtonpolicy.org/research/ballot-measures/new', :title=>'Voters Guide by the Washington Policy Center'}, {:anchor=>'Washington Secretary of State', :link=>'http://wei.secstate.wa.gov/osos/en/Pages/OnlineVotersGuide.aspx', :title=>'Voters Guide by the Secretary of State'}, {:anchor=>'TVW Video Voters Guide', :link=>'http://www.tvw.org/elections/2010videovotersguide.cfm', :title=>'A video Voters Guide by TVW'} ]

    - links.each do |link|
      #{link_to(link['anchor'] , link['link'], :target => "_blank", :title => link['title'])}#{', '}

    - links = [ ["About the initiative process", "http://www.ncsl.org/default.aspx?tabid=16600"], ["Stats \& history of WA ballot measures", "http://www.sos.wa.gov/elections/initiatives/statistics.aspx"], ["Filing an initiative in WA (PDF)", "http://www.sos.wa.gov/_assets/elections/Initiative%20and%20Referenda%20Manual.pdf"] ]

    -if @domain && @domain.name == 'Seattle'
      - links.push(["King County Libraries infoVote 2011", "http://www.kcls.org/infovote/"])

    - links.each do |link|
      #{link_to(link[0] , link[1], :target => "_blank")}#{link == links.last ? '' : ', '}
      
    %hr.ledge.top
    %hr.ledge.bottom



