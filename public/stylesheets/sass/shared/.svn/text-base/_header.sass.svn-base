#masthead
  min-width: 940px
  > div
    margin: 67px auto 0 auto
    padding: $std_gutter
    min-width: 940px
    position: relative
    width: 900px
    background-color: white
    height: 35px
    
    > #offset_header
      position: absolute
      top: -56px
      width: 100%
      
      .logo_cell
        h1#logo
          a
            height: 110px
            width: 97px
            display: block
            overflow: hidden
            padding-right: 160px
      .beta
        z-index: 999
        position: absolute
        font-size: 10px
        color: white
        top: 40px
        left: 125px
        width: 275px
    
      #nav-primary
        position: absolute
        top: 55px
        right: 15px
        width: auto
        
        .nav.primary
          @include nude-list
          margin: 0
          
          > li
            float: left
            height: 36px
            
            &.middle, &.last
              border-left: 2px dotted $brd_red
              
            > a
              padding: 0 15px
              display: block
              font-weight: bold
              font-size: 14px
              height: 36px
              line-height: 38px
              text-transform: capitalize
        
              &:hover
                color: $txt_red
          
            &.drops:hover ul.dropdown
              display: block
              
                
            &.drops
              ul.dropdown
                position: absolute
                top: 35px
                left: 45px
                z-index: 99
                display: none
                padding: 5px 2px
                background-color: $bk_dark_gray
                
                li
                  z-index: 99
                  background-color: $bk_dark_gray
                  @include nude-list   
                  &.finished
                    &.pro
                      background: transparent url('/images/finished_pro_small.png') no-repeat scroll left center
                    &.neutral
                      background: transparent url('/images/finished_neutral_small.png') no-repeat scroll left center
                    &.con
                      background: transparent url('/images/finished_con_small.png') no-repeat scroll left center
                         
                  a
                    padding: 1px 18px
                    color: white
                    height: auto
                    line-height: 18px
                    font-size: 12px
                    text-transform: capitalize
                    
                    &:hover
                      text-shadow: none
                      text-decoration: underline
                    

      #nav-user
        position: absolute
        top: -12px
        right: 15px
        width: auto
        height: 35px
        margin: 0
        background-color: $bk_light_gray
        
        > div
          padding-top: 5px
          line-height: 25px
          float: left
          
          &.first
            border-right: 2px dotted $brd_red
            
          &.create 
            
          &.fb 
            form
              display: inline-block
              margin-right: 10px
              margin-top: 2px
            
          a
            padding: 16px 20px
            height: 25px
            line-height: 25px
            font-size: 14px
            font-weight: bold
            
            &:hover 
              color: $txt_red 
      
          &.first.last a, &.first.last form
            padding-left: 0

  .logged_in_name
    height: 35px
    
  .avatar
    position: relative
    top: -5px
    
.fb, .fb_login
  width: 76px
  height: 29px  
  margin-left: 15px

.fb, .fb_login, .fb_account  
  input#user_submit
    padding-right: 60px
    padding-top: 15px
    overflow: hidden
    color: transparent
    font-size: 0px   
    border: none             
    background-color: transparent
    
.fb
  background: transparent url("/images/fb_login.png") no-repeat scroll 0px 7px
.fb_login
  background: transparent url("/images/fb_login.png") no-repeat scroll 0px 0px 
  

#loginhtml  
  .lvg_account
    h2, h3
      display: none
  .fb_account 
    margin: 10px 0 0 75px
    li.or
      color: gray
      font-size: 18px
      padding-top: 44px
    li.fb_form
      background: transparent url("/images/fb_big.jpg") no-repeat scroll 0px 0px 
      height: 128px
      width: 128px
      margin-left: 75px
  
      > form
        input#user_submit
          padding-right: 128px
          padding-top: 128px