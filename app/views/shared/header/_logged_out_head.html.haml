%a.signin_link
  Sign In


#signin_dialog.user_dialog

:javascript
  $j(document).ready(function(){
    $j('.user_dialog').dialog({
      autoOpen: false,
      modal: true,
      draggable: false,
      dialogClass: 'alert',
      width: 725,
      resizable: false,
      position: ['center', 'middle']
    });

    $j('.signin_link').click(function(){
      $j('#signin_dialog')
        .load("#{new_user_registration_path(:third_party=>false, :context=>"header")}")
        .dialog('open');
      return false;
    });
  });