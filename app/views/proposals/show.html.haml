:javascript
  proposal_stance_data = #{stance_fractions(@proposal)};
  proposal_id = #{@proposal.id};
  //for IE7 compatability
  protovis_stance_has_been_rendered = false;

#explore_proposal
  #proposal_id.hide
    = @proposal.id
  #position_id.hide
    - if @position
      = @position.id
  
  %ol    
    %li.head
      = render :partial => "proposals/description", :locals => {:hide_initially => true}
    
    %li.personal_position
      -if @position && @position.published
        //.you_slider
        //  = image_tag "slider.png", :title => "This is where you stand on #{@proposal.designator}."
        
        You #{@position.stance_name_adverb} #{link_to('modify', edit_proposal_position_path(@proposal, @position))}
      
      -else
        = button_to 'submit your own opinion', new_proposal_position_path(@proposal), :method => :get, :class => "submit_a_position shadow_offset add_corner"
    
    %li.results_narrative

      .action_call
        Explore what people think.

      .participant_connection
        Overall, they

      .points_connection
        consider these to be the most important factors.
        
    %li.breakdown
      .head
      
        %table.bars
          %tr
            %td
            %td.viz
              = render :partial => "proposals/stance_histogram"
            %td
                  
          %tr.vizbase
            %td.first
              .inner
                Support
            %td.middle
              .pedestal
            %td.last
              .inner
                Oppose
      
      .position_marker

        .showing_all
          Click a bar to filter the results

        .showing_filtered.hide
          %a.show_all
            Show all results


    %li.statements
      - @proposal.positions.published.each do |position|
        = render :partial => "positions/statement/show", :locals => { :position => position }

    %li.ranked_points
      .explore#ranked_points
       
        = render :partial => "points/pro_con_list", :locals => { :dynamic => false, :pro_points => @pro_points, :con_points => @con_points }

      .statement_carousel

        .vertical_carousel.vertical


          .paginate.first
            %h3.subheader
              %button.back.fr  
                &#x25B2;
          .carousel
            %ul
              - @proposal.positions.published.each do |position|
                = render :partial => "positions/statement/block", :locals => { :position => position }
                
          
          .paginate.last
            %button.forward.not_ajax.fr
              &#x25BC;
          .clear

        .clear


      .clear
    
    %li.clear

 
