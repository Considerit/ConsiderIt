

- comment #the comment to be edited
- validations ||= {}
- options = {:rows => 6, :class => "autoResize"}.merge(validations)

= form_for comment, :url => update_comment_path(comment), :via => :put, :remote => true, :html => {:class => "unobtrusive_edit_form implicit_edit_mode"} do |f|

  .unobtrusive_edit
    = f.text_area :body, options

    .save_block
      = f.submit 'save', :class => 'hide'
      .updated.hide
        updated