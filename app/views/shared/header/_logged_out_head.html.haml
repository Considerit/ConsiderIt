

%a.signin_link
  Sign In / Create Account


#signin_dialog.user_dialog

:javascript
  (function(){
  $(document).ready(function () {init();});
  if($(window)){$(window).bind('page:change', function() {init();});}
  function init(){
    $('.user_dialog').dialog({
      autoOpen: false,
      modal: true,
      draggable: false,
      dialogClass: 'alert',
      width: 800,
      resizable: false,
      position: ['center', 'middle']
    });

    $(document).on('click', '.signin_link', function(){
      $('#signin_dialog')
        .load("#{new_user_registration_path(:third_party=>false, :context=>"header")}")
        .dialog('open');
      return false;
    });
  }
  })();
