
!!! 5
%html

  %head{ profile: "http://gmpg.org/xfn/1"}

    %meta{ :content => 'text/html; charset=UTF-8', "http-equiv" => "Content-Type" }

    %meta{ :http_equiv => "X-UA-Compatible", :content => "IE=edge,chrome=1" }

    - if !@not_found && @proposal 
      %meta{ :name => "app", :content => 'proposal_embed', :proposal => "/proposal/#{@proposal.id}"}

    %link{ :rel => "preconnect", :href => "https://fonts.googleapis.com" }
    %link{ :rel => "preconnect", :href => "https://fonts.gstatic.com", :crossorigin => ""}
    %link{ :href => "https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:wght@200;300;400;600;700;800&family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap", :rel => "stylesheet"}

    /[if lte IE 8]
      %script{:type => "text/javascript"}
        window.location = "http://windows.microsoft.com/en-us/internet-explorer/download-ie";

    %script{:src => "#{@vendor}/vendor/react.min.js", :type => 'text/javascript'}
    %script{:src => "#{@vendor}/vendor/underscore.js", :type => 'text/javascript'}
    %script{:src => "#{@vendor}/vendor/md5.js", :type => 'text/javascript'}
    %script{:src => "#{@vendor}/vendor/iframe-resizer-inner.min.js", :type => 'text/javascript'}

  %body
    - if @not_found || !@proposal
      #nope{style: "padding: 20px; color: #555"}
        Sorry, we cannot find that proposal. It may not exist, or perhaps you don't have permission to access it.
    - else 
      #content{ subdomain: current_subdomain.name }

      :javascript
        if(!window.console) {
          window.console={
            log : function(){},
            assert : function(){},
            info : function(){},
            warn : function(){},
            error : function(){},
            time : function(){},
            timeEnd : function(){}
          }
        }

      %script{:src => @js, :type => 'text/javascript'}