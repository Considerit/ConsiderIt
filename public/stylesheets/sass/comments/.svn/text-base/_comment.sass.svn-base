#initiative
  .full_discussion
    li.comment, li.new_comment
      
      margin-top: 8px
        
      
      table.comment_body
        width: 100%
        border-bottom: 1px dotted #ccc    
        padding: 5px
        
        .body_row
          .user, .text
            float: left
                
          .user
            width: 120px
          
          .text
            width: 83%

        .subject_line
          &.pro .text
            background-color: $bk_green   
          &.con .text
            background-color: $bk_purple   
          &.unaffiliated .text
            background-color: #777   

          .text
            width: 95%
            margin-bottom: 8px         
            .subject
              font-size: 18px
              color: white
              padding: 5px 10px
        .reply_row
          a.reply
            margin-left: 120px
            padding: 10px 10px 10px 30px
            font-size: 14px
            background: transparent url("/images/comment-reply.png") no-repeat scroll 0px 2px 
            display: block
            &:hover
              background-image: url("/images/comment-reply_hover.png") 
              text-decoration: underline
            