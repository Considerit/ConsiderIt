#update_registration_form
  #site_registration

    .primary
      %h2
        Preferences

      = form_for(current_user, :as => :user, :url => registration_path(:user), :method => :put, :html => { :multipart => true }) do |f|

        %ul
          %li
            = f.label :name, "Your name"
            = f.text_field :name

          %li
            = f.label :email, "Email address"
            = f.email_field :email
                    
          %li
            = f.label :avatar, "Your picture"          
            = f.file_field :avatar, :title => 'Upload a profile picture'

        .submit_footer
          = f.submit "Update", :class => 'button'

          %a.cancel
            cancel
