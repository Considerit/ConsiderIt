#initiative

  ol#step_through
    @include nude-list
    
    li.step
                
      &#welcome
        margin-bottom: 5px
        padding-bottom: 10px
        .description
          .show_details
            font-size: 12px
            vertical-align: top
          h3
            font-size: 20px
          .details
            font-size: 14px
            width: 70%
            margin-bottom: 10px
            li
              list-style: disc outside none
              padding: 5px
              
        .thanks
          
          h3.banner
            font-size: 18px
            color: $txt_gray
          h3.whatsnext
            margin-top: 15px
            
            font-size: 28px

        .update
          font-size: 18px
          float: right
          .change_stance
            a:hover
              text-decoration: underline
                    
    li#print_summary
      background-color: $bk_blue
      padding-bottom: 0
      
      span.share
        padding-left: 5px
        &.facebook
          position: relative
          top: -4px
        &.twitter
          position: relative
          top: 2px
    

    li.discuss
      float: left
      width: 400px
      
      .discussion
        .load
          margin-top: 10px auto
          padding: 15px 20px
          
          .load_comments
            width: 276px
            height: 53px
            background: transparent url("/images/load_comments.png") no-repeat top left
            border: none
          
    li.more_measures
      float: right
      width: 525px
      
      .head
        .banner
          padding-left: 10px
    li.update
      background-color: $bk_blue
      
    li.full_discussion
      
      > h2
        position: relative
        padding: 3px 3px 3px 20px
        background-color: $bk_dark_blue    
        color: white
        width: 150px
        text-align: center
        left: -10px
