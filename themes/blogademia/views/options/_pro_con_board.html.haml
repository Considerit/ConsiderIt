
%div.group{:class=>"ranked_points_bucket_#{group_id}"}

  .pro_con_list
     
    .points_board#points_on_board_pro
      .pro_con_list_header.pro_header

      = render :partial => "points/column", :locals => { :points => @pro_points, :is_pro => true, :origin => 'board', :bucket => @bucket, :enable_pagination => true, :page => @page, :paginate_before => false, :paginate_after => true, :show_both_arrows => true }

    .points_board#points_on_board_con 
      .pro_con_list_header.con_header

      = render :partial => "points/column", :locals => { :points => @con_points, :is_pro => false, :origin => 'board', :bucket => @bucket, :enable_pagination => true, :page => @page, :paginate_before => false, :paginate_after => true, :show_both_arrows => true }

    .clear 
