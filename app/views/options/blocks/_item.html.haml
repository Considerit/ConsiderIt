%li{ :id => "initiative_item-#{option.id}", :class => "initiative_item horizontal #{has_stance(option) ? 'finished' : 'not-finished'} #{option==@option ? 'active' : 'not-active'} #{style} #{option.domain_short != 'WA State' ? 'local' : ''}" }

  %a.initiative_block_wrapper{ :href => option_path(option), :title => "Think through option #{option.category} #{option.designator}"}

    - if style == 'vertical'
      .short_name
        = option.short_name

      .number
        = option.designator

    - else

      .designation
        =option.domain_short

      .number
        = option.designator
                              
      .short_name
        = option.short_name
      
      - if option==@option && hide_initially
        %a.show_option_description
          show details

  .completion.hide
    &#x2713;