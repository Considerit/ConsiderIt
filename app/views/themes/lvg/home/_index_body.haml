#home

  = render :partial => "home/follow"

  #people
    - users = get_users(100)
    - if users && users.length > 75
      .row
        - users[0..24].each do |user|
          - pp user.avatar
          .img{:style => "background-image: url('#{image_path user.avatar.url(:small)}')"}
