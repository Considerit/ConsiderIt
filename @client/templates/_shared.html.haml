

%script{ :type => "text/template", :id => "tpl_user_tooltip" }

  .l-tooltip.l-tooltip-user
    .l-tooltip-user-block
      .l-tooltip-title.l-tooltip-user-title
        .l-tooltip-user-name
          {{ user.name }}
        .l-tooltip-user-joined
          joined {{ joined_at }}



    .l-tooltip-user-metrics

      %ul
        (( _.each(metrics, function(metric) { ))
        %li.l-tooltip-user-metric{ :class => "l-tooltip-user-metric-{{metric[2]}}" }>
          %span.l-tooltip-user-metric-number>
            {{ user[metric[1]] }}
          %span.l-tooltip-user-metric-desc>
            {{ metric[0] }}
        (( }) ))

    .l-tooltip-user-actions
      (( if(proposal) { ))
      %a.l-tooltip-user-action.superbutton{ :href => "{{Routes.user_opinion_proposal_path(proposal.id, user.id)}}", :'action' => 'user_opinion_page', :'data-proposal-id' => "{{proposal.id}}", :'data-user-id' => "{{user.id}}" }
        Read their thoughts on this issue
      (( } ))
      / %a.l-tooltip-user-action.l-tooltip-user-profile{ :'action' => 'user_profile_page', :'data-id' => "{{user.id}}" }
      /   View their profile


