[mysqld]
{% if mysqld.utf8 %}
# apply utf8
character-set-server = utf8
collation-server = utf8_unicode_ci
{% endif %}

{% if mysqld is not none %}
{% for key, value in mysqld.iteritems() %}
{% if key != 'utf8' %}

{{ key }}{% if value is not none %}={{ value }}{% endif %}
{% endif %}
{% endfor %}
{% endif %}