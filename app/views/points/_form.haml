.pointform{ :class => "#{action}pointform" }

  = form_for [@proposal, point], :action => action, :html => {:class => "form-#{is_pro ? 'pro' : 'con'}"}, :remote => true do |f|

    .form_proper
      =f.hidden_field :is_pro, :id => "point-current-is_pro", :value => is_pro

      / .username
      /   by
      /   - if point.hide_name
      /     anonymous
      /   - elsif point.user
      /     = point.user.username
      /   - else
      /     unknown

      .point-title-group.inlined
        = f.text_area :nutshell, :placeholder => 'Summarize your point (required)', :cols => 24, :class => "point-title is_counted", :required=>true, :maxlength => 140
        %span.count
          140
        .clear

      .point-description-group
        = f.text_area :text, :title => "Write a longer description (optional)", :cols => 24, :class => "point-description wysiwyg"
        .clear

      .hide_name.fl{:title => 'We encourage you not to hide your name from other users. Signing your point with your name lends it more weight to other participants.'}
        = f.check_box :hide_name
        = f.label :hide_name, 'conceal your name'

      //- if @user
      //  .point-pledge
      //     %p.note
      //       %strong.alert
      //         Remember your pledge!

      .point-submit.fr
        = f.submit 'Done', :class => "button #{is_pro ? 'pro' : 'con'}"
        
      .point-cancel
        %a.new_point_cancel
          cancel
    .clear

