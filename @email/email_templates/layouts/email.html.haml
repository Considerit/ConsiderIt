!!! Strict
%html{html_attrs}
  %head{ :profile => "http://gmpg.org/xfn/1" }

  - subdomain = @subdomain || @notification.subdomain
  - bg_color = "#B03A44" #'#ccc' #subdomain.branding_info['primary_color']
  
  %body
    %table#content{border: "0", cellpadding: "0", cellspacing: "0", height: "100%", width: "100%", style: "border-collapse: separate; border-spacing: 30px; font-family: 'Avenir Next', 'Lucida Grande', 'Lucida Sans Unicode', 'Helvetica Neue', Helvetica, Verdana, sans-serif; background-color: #{bg_color}; color: #ffffff; padding: 10px 0"}

      %tr

        %td{style: 'text-align: center'}

          %h1{style: 'font-weight: 600; margin: 0; padding: 0'}
            %a{href: subdomain.host_with_port, style: 'color: #ffffff'}
              = subdomain.title

      %tr
        %td{style: "margin: 15px auto; padding: 20px 40px; background-color: #ffffff; color: #414141; box-shadow: 0 1px 2px rgba(0,0,0,.5); text-align: left"}

          = yield



      %tr
        %td{style: 'text-align: center'}
          = yield :footer

          %div{style: "color:white; margin-top: 15px; font-size: 18px"}
            Technology by 
            %a{href: 'https://consider.it', target: '_blank', style: "font-weight: 700; color: #ffffff; text-decoration: none"}
              Consider.it


