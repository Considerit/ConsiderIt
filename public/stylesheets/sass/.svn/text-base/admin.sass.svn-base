#admin
  &.points,
  &.comments,
  &.users
    > table
      tr:nth-child(2n+1)
        background-color: #ddd
      
      tr > td
        margin-bottom: 10px
        padding: 10px
        border-bottom: 1px solid #ddd
  &.points
    > table
      tr > td          
        &.measure
          width: 5%
        &.designation
          width: 3%
          
        &.nutshell
          width: 25%
        &.text
          width: 30%
        &.form
          width: 25%

  &.comments
    > table
      tr > td          
        &.measure
          width: 5%
        &.subject
          width: 25%
        &.body
          width: 38%
        &.form
          width: 20%          
          