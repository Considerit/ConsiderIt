- cache ['theme_body', current_tenant] do 

  - if false && Rails.env.development?
    = render :partial => "shared/dev_tools"      


  .t-intro-wrap{:'data-domain' => 'homepage'}
    .l-content-wrap.t-intro

      = theme_image_tag 'logo_large.png', :class => 't-logo'

      #t-intro-people  
        - rows = 7
        - users_per_row = 38

        - pics = User.where('avatar_file_name IS NOT NULL')
        - users = pics.sample( [rows * users_per_row, pics.count].min )

        - (0..rows-1).each do |row|
          .row{:row => row}
            - users[row*users_per_row..(row+1)*users_per_row-1].each do |user|
              .avatar{:id => "avatar-#{user.id}"}


              
      .l-message-title
        //= current_tenant.header_text
        A guide powered by the wisdom of #{current_tenant.identifier == 'cali' ? 'California' : 'Washington'} voters

      .t-intro-get-started
        Click a ballot measure below. Then decide for yourself, with the help of fellow voters.


  #m-proposals-container
    %ul.m-proposal-list

  #m-proposals-container-completed
    .m-proposals-container-completed-header{:'data-domain' => 'homepage'}
      %hr
      %h2
        Completed conversations
    %ul.m-proposal-list