%li.point_in_list_other.point_in_list{ :id => "point_in_list_other-#{point.id}", :class => point.is_pro ? 'pro' : 'con' }
  
  .body
  
    - if !point.is_pro
      .include.left
        = render :partial => "inclusions/new", :locals => { :point => point }

    .username
      - if !point.hide_name
        .avatar
          = image_tag point.user.avatar.url(:midsmall), :alt => "#{h point.user}'s profile picture"

      by 
      - if point.hide_name
        <anonymous>
      - elsif point.user
        = point.user.name
      - else
        <unregistered>
          
    .point_text.nutshell 

      - if point.nutshell.length > 0
        = h point.nutshell
      - else
        = h point.text.length > 137 ? point.text[0,137] : point.text
    
    .point_text.full
      .details
        = point.text
      
      .link
        %h4
          external links
        - if point.point_links.count > 0
          %ul
            - point.point_links.each do |pl|
              = render :partial => 'point_links/show', :locals => { :point_link => pl }
        - else
          none provided
          

    .read_more
      %a.toggle.more.point_text_toggle
        read more / discuss
      %a.toggle.less.hide.point_text_toggle
        hide rest

    - if point.is_pro
      .include.right
        = render :partial => "inclusions/new", :locals => { :point => point }



:javascript
  ConsiderIt.points.set_more_less_text_toggle("#point_in_list_other-#{point.id}", #{point.id}, #{@option.id});
  $j('#point_in_list_other-#{point.id}').corner('all 5px');

  $j('.avatar').corner('5px');