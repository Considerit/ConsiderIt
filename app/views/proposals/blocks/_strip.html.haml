- prompt ||= 'Read more and comment'

.proposals{ :class => "#{style} horizontal" }
  .paginate.first
    %button.back
      &#9664;
  .carousel{ :name => "proposals" }
    %ul
      - get_proposals_by_rank.each do |proposal|
        = render :partial => "proposals/blocks/item", :locals => { :proposal => proposal, :show_full_text => false, :style => style, :hide_initially => hide_initially, :prompt => prompt }
    .clear
  .paginate.last
    %button.forward.not_ajax
      &#9654;
  .clear

