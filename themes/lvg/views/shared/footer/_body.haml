%div
  .sitemap
    %div.initiatives
      %h4 #{APP_CONFIG['decisions']['name']['short']}s
      %ul.nav
        - get_initiatives.each do |option|
          %li{ :class => "#{has_stance(current_user, option)}"}
            %a.footer_initiative_link{ :href => option_path(option), :title => "#{option.category} #{option.designator}" } 
              = option.designator
              = option.short_name
      
    %div.guides
      
      - APP_CONFIG['footer']['resources'].each do |resource_block|
        %h4 
          = resource_block['title']
        %ul.nav
          - resource_block['items'].each do |resource|
            %li= link_to "#{resource['anchor']}", "#{resource['link']}", :target => "_blank", :title => "#{resource['title']}"        

      - if APP_CONFIG['footer']['has_custom_resources']
        %h4.later Other Resources
        %ul.nav
          %li= link_to "Funding sources of various initiatives", "http://www.spokesman.com/stories/2010/sep/05/sizable-sums-target-voters/", :target => "_blank"
          %li
            Comparing the liquor initiatives
            = link_to "[1]", "http://www.spokesman.com/stories/2010/aug/27/i-1100-i-1105-would-cut-state-revenue/", :target => "_blank"          
            = link_to "[2]", "http://seattletimes.nwsource.com/html/businesstechnology/2012690399_liquor22.html", :target => "_blank"          
          %li= link_to "What if both liquor initiatives pass?", "http://www.publicola.net/2010/07/02/extra-fizz-what-will-happen-if-both-liquor-measures-pass/", :target => "_blank"
          %li= link_to "About the initiative process", "http://www.ncsl.org/default.aspx?tabid=16600", :target => "_blank"
          %li= link_to "Stats \& history of WA ballot measures", "http://www.sos.wa.gov/elections/initiatives/statistics.aspx", :target => "_blank"
          %li= link_to "Filing an initiative in WA (PDF)", "http://www.sos.wa.gov/_assets/elections/Initiative%20and%20Referenda%20Manual.pdf", :target => "_blank"

    %div.learn.last
  
