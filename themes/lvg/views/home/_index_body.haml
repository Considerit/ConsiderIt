  #tutorial
    #console
      .frame
        .what
          %iframe{ :src => "http://player.vimeo.com/video/30006158?title=0&byline=0&portrait=0", :width => "400", :height => "225", :frameborder => "0", :webkitAllowFullScreen => true, :allowFullScreen => true }

