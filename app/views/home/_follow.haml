#follow
  - if APP_CONFIG['socmedia']['facebook']['include_follow']
    %span.facebook

      - if true

        %iframe{:src => "//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.facebook.com%2Fpages%2FLiving-Voters-Guide%2F157151824312366&send=false&layout=button_count&width=450&show_faces=false&action=like&colorscheme=light&font=lucida+grande&height=21", :scrolling => "no", :frameborder => "0", :style => "border:none; overflow:hidden; width:90px; height:21px;", :allowTransparency => "true"}

      -else
        %a.fb_page{ :href => "#{APP_CONFIG['socmedia']['facebook']['facebook_page']}", :target => "_blank", :title => "Find us on Facebook" }
          = image_tag "facebook_button.png", :alt => "Facebook logo"


  - if APP_CONFIG['socmedia']['twitter']['include_follow']
    %span.twitter
      - if true
        %a.twitter-follow-button{:href => "https://twitter.com/lvguide", "data-show-count".intern => "false", "data-width".intern => "70px"}
          Follow
        %script{:src => "//platform.twitter.com/widgets.js", :type => "text/javascript"}
      - else
        %a.twitter_page{ :href => "#{APP_CONFIG['socmedia']['twitter']['twitter_page']}", :target => "_blank", :title => "Follow us on Twitter" }
          = image_tag "Twitter_button.png", :alt => "Twitter logo"