- prompt ||= @proposal.name ? @proposal.name : 'Help consider this, please.'

.proposal_prompt

  .head.single
    %h3.banner
      - if @can_update
        = render :partial => 'proposals/admin_make_editable', :locals => { :field => :name, :label => prompt}
      - else
        = prompt

  = image_tag "lvg/images/states/#{current_tenant.identifier}.png", :class => "pic"

  .description_wrapper

    .full_text
      - for i in @proposal.format_description
        %p= h i.html_safe
    
    - if @proposal.long_description && @proposal.long_description.strip != ''
      .long_description
        .prompt
          Long Description
          %a.hidden
            show
        .full.hide
          = @proposal.long_description.html_safe

    - if current_tenant.identifier == 'cali'
      .long_description
        .prompt
          Sec. of State's overview
          %a.hidden
            show
        .full.hide
          #prop_overview

          :javascript
            var myPDF = new PDFObject({
              url: "#{@proposal.url}",
              id: "proposal_overview",
              width: "700px",
              height: "500px",
              pdfOpenParams: {
                navpanes: 1,
                statusbar: 0,
                view: "FitH",
                pagemode: "thumbs"
              }
            }).embed("prop_overview");

    - if @proposal.additional_details && @proposal.additional_details.strip != ''
      .additional
        .prompt
          Fiscal impact statement
          %a.hidden
            show
        .full.hide
          = @proposal.additional_details.html_safe

    - if @proposal.url && @proposal.url.strip != ''
      #full_desc_block
        #{'...'}or read the 
        =link_to "official measure", @proposal.url, :title => "Visit the official listing on the state's website", :target => '_blank'
  .clear

  - if !@results_page
    .head.single
      %h3.banner
        Should this pass? What are the most important factors to you?

