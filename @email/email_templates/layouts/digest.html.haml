!!! Strict
%html{html_attrs}
  %head{ :profile => "http://gmpg.org/xfn/1" }

  - subdomain = @subdomain || @notification.subdomain
  - bg_color = "#B03A44" #'#ccc' #subdomain.branding_info['primary_color']
  
  %body
    #content{style: "font-family: 'Avenir Next', 'Lucida Grande', 'Lucida Sans Unicode', 'Helvetica Neue', Helvetica, Verdana, sans-serif; background-color: #{bg_color}; color: white; text-align: center; padding: 10px 0; box-sizing: border-box;"}

      %div{style: 'color:white;margin: 0; padding: 0; font-size: 24px;'}
        #{@user.first_name}, here is a summary of recent activity on 
        
        %a{href: subdomain.host_with_port, style: 'color: white; font-weight: 600'}
          = subdomain.title

      %div{style: 'color:white; font-size:12px; opacity:.7;'}
        - if @last_sent_at
          Last summary sent #{time_ago_in_words(@last_sent_at)} ago. 

        Sending no more than one summary per #{@send_limit.split('_')[1]} according to 
        = render :partial => 'event_mailer/unsubscribe'
        #{'.'}


      = yield

      %div{style: "margin-top: 25px"}
        = yield :footer

        %div{style: "margin-top: 15px; font-size: 18px"}
          Technology by 
          %a{href: 'https://consider.it', target: '_blank', style: "font-weight: 700; color: white; text-decoration: none"}
            Consider.it


