- has_already_taken_stance = has_stance(proposal)

%li{ :id => "proposal_item-#{proposal.id}", :class => "proposal_item horizontal #{has_already_taken_stance ? 'finished' : 'not-finished'} #{proposal==@proposal ? 'active' : 'not-active'} #{style} #{proposal.domain_short != 'WA State' ? 'local' : ''}" }

  %a{ :href => !proposal.active || has_already_taken_stance ? proposal_path(proposal.long_id) : new_proposal_position_path(proposal.long_id), :title => "Think through proposal #{proposal.category} #{proposal.designator}"}

    - if style == 'vertical'
      .short_name
        = proposal.short_name

      .number
        = proposal.designator

    - else

      .designation
        =proposal.domain_short

      .number
        = proposal.designator
                              
      .short_name
        = proposal.short_name
      
      - if proposal==@proposal && hide_initially
        %a.show_proposal_description
          show details

  .completion.hide
    &#x2713;