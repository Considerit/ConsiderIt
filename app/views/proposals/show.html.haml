:javascript
  proposal_stance_data = #{stance_fractions(@proposal)};
  proposal_id = #{@proposal.id};
  //for IE7 compatability
  protovis_stance_has_been_rendered = false;

#explore_proposal
  #proposal_id.hide
    = @proposal.id
  #position_id.hide
    - if @position
      = @position.id

  = render :partial => "proposals/description", :locals => {:hide_initially => true, :prompt => "What people think about #{@proposal.category} #{@proposal.designator}"}
  
  %ol    
                
    %li.breakdown
      
      .pre
        .personal_position
          -if @position && @position.published
            //.you_slider
            //  = image_tag "slider.png", :title => "This is where you stand on #{@proposal.designator}."
            
            You #{@position.stance_name_adverb} #{link_to('update', edit_proposal_position_path(@proposal, @position))}
          
          -else
            You haven't spoken yet
            = button_to 'contribute a position', new_proposal_position_path(@proposal), :method => :get, :class => "submit_a_position"
        .action
          Click a bar to learn more

      .histogram_arrow
        .support
          support
        .oppose
          oppose

      .histogram
        .viz
          = render :partial => "proposals/stance_histogram"

    %li.ranked_points

      .explore#ranked_points

        .participant_container
          = render :partial => "proposals/participants"
       
        = render :partial => "points/pro_con_list", :locals => { :dynamic => false, :bucket => 'all', :pro_points => @pro_points, :con_points => @con_points }

        - @segments.each_with_index do |(pros,cons), bucket| 
          = render :partial => "points/pro_con_list", :locals => { :dynamic => false, :bucket => bucket, :pro_points => pros, :con_points => cons}

    %li.clear
 
