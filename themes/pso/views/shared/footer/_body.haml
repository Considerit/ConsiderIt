%div
  .sitemap
      
    .learn
      %h2 Learn more
      - APP_CONFIG['footer']['resources'].each do |resource_block|
        %ul
          %h4 
            = resource_block['title']
          %ul.nav
            - resource_block['items'].each do |resource|
              %li= link_to "#{resource['anchor']}", "#{resource['link']}", :target => "_blank", :title => "#{resource['title']}"        
          .clear