#description{ :class => "#{hide_initially ? 'hiding' : ''}"}
  = render :partial => "options/blocks/strip", :locals => { :style => 'horizontal', :hide_initially => hide_initially }

  .pic

  .description_wrapper
    .init_text
      %h2.locality
        = @option.domain
        = @option.category
        = @option.designator
        
      %h1.initiative_name
        #{@option.name}

    .full_text
      - for i in @option.format_description
        %p.initiative_desc_point= h i
    
    - if @option.long_description
      .long_description
        .prompt
          Long Description
          %a.hidden
            show
        .full.hide
          = @option.long_description.html_safe

    - if @option.additional_details
      .additional
        .prompt
          Fiscal impact statement
          %a.hidden
            show
        .full.hide
          = @option.additional_details.html_safe


  .clear

  - if @option.url
    #full_desc_block
      =link_to "Official measure site", @option.url, :title => "Visit the official listing on the state's website", :target => '_blank'

