.full_statement.hide{:id=>"user-#{position.user_id}-full"}
  .wrapper.shadow_offset
    .userid.hide
      #{position.user_id}
    %a.close
      close

    .col1
      .avatar
        - if position.user.avatar
          = image_tag position.user.avatar.url(:large), :alt => "#{h position.user.name}'s profile picture", :class=>'pic'
          = image_tag 'speak_triangle.png', :class=>'tri'
      .username
        = h position.user.name
    .col2
      .stance
        %span.stance_name  
          #{position.stance_name} 
        this paper's acceptance to CHI

      .prose
        = h simple_format(position.explanation)
    .clear

  = render :partial => 'comments/discussion', :locals => { :comments => position.comments.count > 0 ? position.comments : [], :commentable => position, :context => 'position'}