#update_registration_form
  #lvg_account
    %h2
      Edit Profile

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true, :method => :put }) do |f|

      %ul
        %li
          = f.label :avatar, "Your picture"          
          = f.file_field :avatar

        - if !current_user.email
          %li
            = f.label :email, "Email address"
            = f.email_field

        %li
          = f.check_box :notification_author
          = f.label :notification_author, 'Email me when someone comments on a pro or con I wrote.'

        %li
          = f.check_box :notification_commenter
          = f.label :notification_commenter, 'Email me when someone comments on a pro or con that I also commented on.'

        %li
          = f.check_box :notification_reflector
          = f.label :notification_commenter, 'Email me when someone summarizes a comment I wrote.'

        %li
          = f.check_box :notification_responder
          = f.label :notification_commenter, 'Email me when a commenter responds to a summary I wrote.'


      .submit
        = f.submit "Update"

        %a.cancel
          cancel
