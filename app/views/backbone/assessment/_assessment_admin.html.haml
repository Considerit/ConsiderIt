%script{ :type => "text/template", :id => "tpl_claim" }
  .assessment-gutter
    %span.avatar{ :'data-target' => "user_profile_page", :'data-id' => "{{creator.id}}", :id => "avatar-{{creator.id}}"}

  .assessment-context
    .assessment-claim
      Claim : {{ claim_restatement }}

    .assessment-context-content
      (( if( verdict ){ ))
      .assessment-result
        %emph
          Evaluation: {{ format_verdict }}
      (( } ))

      .assessment-body
        {{ result }}


      (( if( notes ){ ))
      .assessment-body
        %strong
          Private notes. 
        {{ notes }} 
      (( } ))

    .assessment-status-wrap
      .assessment-status
        created by {{ creator.get('name') }}    
      (( if(approver) { ))
      .assessment-status
        approved by {{ approver.get('name') }}
      (( } ))
    .assessment-footer
      %span.assessment-footer-link
        %a.answer
          {{ !verdict ? 'Answer' :'Edit' }}

      (( if(!approver && !is_creator ){ ))  
      %span.assessment-footer-link
        %a.approve
          Approve
      (( } ))

      (( if(!assessment.complete){ ))  
      %span.assessment-footer-link
        %a.delete
          Delete
      (( } ))




