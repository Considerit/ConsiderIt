%div
  .sitemap
    %div.initiatives
      %h4 #{APP_CONFIG['decisions']['name']['short']}s
      %ul.nav
        - get_initiatives.each do |option|
          %li{ :class => "#{has_stance(current_user, option)}"}
            %a.footer_initiative_link{ :href => option_path(option), :title => "#{option.category} #{option.designator}" } 
              = option.designator
              = option.short_name
      
    %div.guides
      
      - APP_CONFIG['footer']['resources'].each do |resource_block|
        %h4 
          = resource_block['title']
        %ul.nav
          - resource_block['items'].each do |resource|
            %li= link_to "#{resource['anchor']}", "#{resource['link']}", :target => "_blank", :title => "#{resource['title']}"        

      - if APP_CONFIG['footer']['has_custom_resources']
